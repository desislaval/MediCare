<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="patient" type="com.dessylazarova.medicare.data.Patient"/>
        <variable name="itemClickListener" type="com.dessylazarova.medicare.adapters.PatientVH"/>
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/margin_extra_small"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginEnd="@dimen/margin_small"
        app:cardBackgroundColor="@color/cardBackgroundColor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/margin_small">

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/test_name"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_marginBottom="@dimen/margin_extra_small" />

            <TextView
                android:id="@+id/txt_egn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/test_egn" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>